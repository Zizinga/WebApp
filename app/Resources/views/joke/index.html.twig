{% extends 'base.html.twig' %}

{% block body %}
   <div class="col-lg-12">
           <hr class="my-3">
       <!--Post-->
       <div class="post-wrapper wow fadeIn" data-wow-delay="0.2s">
           <div class="md-form">
               <i class="fa fa-search prefix"></i>
               <input type="text" id="form76" class="form-control">
               <label for="form76">Search..</label>
           </div>

           {% for joke in jokes %}
           <!--Jumbotrons for the jokes-->
           <div class="jumbotron">
               <p class="lead">{{ joke.content }}</p>
               <hr class="my-2"><br>
               <h6>Posted by <a href="">{{ joke.author.comicname }}</a> {{ joke.date|date('D d/M/Y') }}</h6>
               <a class="btn btn-sm btn-default"><i class="fa fa-thumbs-up left"> {{ joke.id+3 }}</i></a>
               <a class="btn btn-sm btn-default"><i class="fa fa-thumbs-down left"> {{ joke.id }}</i></a>
               <a class="btn btn-social-icon btn-twitter" href="http://twitter.com">
                   <span class="fa fa-twitter"></span>
               </a>
               <a class="btn btn-social-icon btn-facebook" href="http://facebook.com">
                   <span class="fa fa-facebook"></span>
               </a>

           </div>
           <!--/.Jumbotron-->
           {% endfor %}


       </div>
       <!--/.Post-->
   </div>
{% endblock %}
{% block javascripts %}
    {{ parent() }}
    <script src="https://cdnjs.cloudflare.com/ajax/libs/rxjs/5.0.1/Rx.min.js"></script>
    <script src="{{ asset('js/infinite-scroll.js') }}"></script>
{% endblock javascripts %}
