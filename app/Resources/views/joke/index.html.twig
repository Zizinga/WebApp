{% extends 'base.html.twig' %}

{% block body %}
   <div class="col-lg-12">
           <hr class="my-3">
       <!--Post-->
       <div class="post-wrapper wow fadeIn" data-wow-delay="0.2s">
           <div class="md-form">
               <i class="fa fa-search prefix"></i>
               <input type="text" id="form76" class="form-control">
               <label for="form76">Search..</label>
           </div>
           {% for joke in jokes %}
           <!--Jumbotrons for the jokes-->
           <div class="jumbotron">
               <p class="lead">{{ joke.content }}</p>
               <hr class="my-2"><br>
               <h6>Posted by <a href="">{{ joke.author.comicname }}</a> {{ joke.date|date('D d/M/Y') }}</h6>
               <a class="btn btn-default"><i class="fa fa-thumbs-up left"></i></a>
               <a class="btn btn-default"><i class="fa fa-thumbs-down left"></i></a>
           </div>
           <!--/.Jumbotron-->
           {% endfor %}


       </div>
       <!--/.Post-->
   </div>
{% endblock %}
