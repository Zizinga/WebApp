{% extends 'base.html.twig' %}

{% block body %}
    <h1>Joke</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ joke.id }}</td>
            </tr>
            <tr>
                <th>Content</th>
                <td>{{ joke.content }}</td>
            </tr>
            <tr>
                <th>Date</th>
                <td>{% if joke.date %}{{ joke.date|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Status</th>
                <td>{% if joke.status %}Yes{% else %}No{% endif %}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('joke_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('joke_edit', { 'id': joke.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
