{% extends 'base.html.twig' %}

{% block body %}
    <h1>Donations list</h1>

    <table>
        <thead>
            <tr>
                <th>Id</th>
                <th>Date</th>
                <th>Phone</th>
                <th>Amount</th>
                <th>Currency</th>
                <th>Status</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for donation in donations %}
            <tr>
                <td><a href="{{ path('donation_show', { 'id': donation.id }) }}">{{ donation.id }}</a></td>
                <td>{% if donation.date %}{{ donation.date|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{{ donation.phone }}</td>
                <td>{{ donation.amount }}</td>
                <td>{{ donation.currency }}</td>
                <td>{{ donation.status }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('donation_show', { 'id': donation.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('donation_edit', { 'id': donation.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('donation_new') }}">Create a new donation</a>
        </li>
    </ul>
{% endblock %}
