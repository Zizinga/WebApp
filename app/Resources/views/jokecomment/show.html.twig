{% extends 'base.html.twig' %}

{% block body %}
    <h1>Jokecomment</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ jokeComment.id }}</td>
            </tr>
            <tr>
                <th>Content</th>
                <td>{{ jokeComment.content }}</td>
            </tr>
            <tr>
                <th>Date</th>
                <td>{% if jokeComment.date %}{{ jokeComment.date|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('jokecomment_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('jokecomment_edit', { 'id': jokeComment.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
