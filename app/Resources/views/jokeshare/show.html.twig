{% extends 'base.html.twig' %}

{% block body %}
    <h1>Jokeshare</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ jokeShare.id }}</td>
            </tr>
            <tr>
                <th>Date</th>
                <td>{% if jokeShare.date %}{{ jokeShare.date|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('jokeshare_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('jokeshare_edit', { 'id': jokeShare.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
